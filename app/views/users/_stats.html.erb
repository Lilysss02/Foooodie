<!-- フォロワーの統計情報を表示するパーシャル -->
<% @user ||= current_user %>
<!-- フォローしている人数 -->
<div class="stats">
  <div class="following">
    <a href="<%= following_user_path(@user) %>">
      フォロー <strong id="following" class="stat"><br>
        <%= @user.followings.count %>
      </strong>
    </a>
  </div>
<!-- フォローされている人数 -->
  <div class="follower">
    <a href="<%= followers_user_path(@user) %>">
      フォロワー <strong id="followers" class="stat"><br>
        <%= @user.followers.count %>
      </strong>
    </a>
  </div>
</div>
<br>

<style>
  .stats {
    text-align: center;
  }
  .following {
    border-right: 1px solid #ddd;
    width: 100px;
    float: left;
  }

  .follower {
    width: 100px;
    float: left;
  }
</style>