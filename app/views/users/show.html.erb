<% if flash[:success] %>
    <p class="alert alert-success"><%= flash[:success] %></p>
<% end %>

<div class="container">
    <div class="row">
        <div class="col-md-offset-3 col-md-6">
			<h1>マイページ</h1>
			<br>
			<br>
			<% if @user.image.attached? %>
				<%= image_tag @user.image.variant(resize:"200x200").processed, class: "profile-image" %>
			<% else %>
			    <%= image_tag("no_image.jpg", size: "200x200") %>
			<% end %>
			<%= @user.user_name %>

			<!-- フォロー／フォロワー数 -->
		    <section class="stats">
		      <%= render 'stats' %>
		    </section>

		    <!-- フォロー用フォーム -->
    		<%= render 'follow_form' %>

			<br>
			<%= link_to "ユーザ編集", edit_user_path(current_user.id) %>
			<br>
			<%= link_to "新規投稿", new_post_path %>
			<br>
			<br>
		</div>
		<!-- ユーザの投稿一覧 -->
		<%= render 'posts/show_tab' %>
	</div>
</div>

<style>
	.profile-image {
		border-radius: 100px
	}
</style>