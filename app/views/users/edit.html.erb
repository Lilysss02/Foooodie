<div class="container">
    <div class="row">
        <div class="col-md-offset-3 col-md-6">
			<% if flash[:warning] %>
			    <p class="alert alert-danger"><%= flash[:warning] %></p>
			<% end %>

			<h1>ユーザ編集</h1>
			<br>
			<br>
			<%= form_with model: @user, local: true  do |f| %>
			  <label>プロフィール画像</label>
			  <%= f.file_field :image %><br>
			  <label>ユーザ名</label>
			  <%= f.text_field :user_name %><br>
			  <%= f.submit "更新" %>
			<% end %>
		</div>
	</div>
</div>