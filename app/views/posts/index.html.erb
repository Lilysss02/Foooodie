<h1>TOPページ</h1>

<div class="container">
    <div class="row">
        <div class="col-md-offset-3 col-md-6">
        	<% @posts.each do |post| %>

				<% if post.images.attached? %>
				  <% post.images.each do |image| %>
				    <%= image_tag image.variant(resize: "200x200") %> <br>
				  <% end %>
				<% else %>
					<%= image_tag("no_image.jpg", :size => "200x200") %>
				<% end %>

				<%= post.title %>
				<%= render_with_hashtags(post.body) %>
			<% end %>
		</div>
	</div>
</div>