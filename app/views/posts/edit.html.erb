<div class="container">
    <div class="row">
        <div class="col-md-offset-3 col-md-6">
            <h2>投稿編集ページ</h2>
                <%= form_with model: @post, local: true  do |f| %>
                <label>レポート写真</label>
    			<%= f.file_field :images, multiple: true, class: "file-input" %><br>

    			<% if @post.images.attached? %>
    				<% @post.images.each do |image| %>
    					<%= image_tag image.variant(resize: "200x200") %>
    				<% end %>
    			<% end %>
    			<br>
                <label>タイトル</label>
                <%= f.text_field :title %><br>
                <label>本文</label>
                <%= f.text_area :body %><br>
                <%= f.submit "更新", class: "btn btn-primary btn-block" %>
            <% end %>
            <%= link_to "Back", post_path(@post) %>
        </div>
    </div>
</div>