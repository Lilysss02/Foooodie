<h1>お気に入り</h1>
<div class="container">
	<div class="row">
		<% @favorites.each do |favorite| %>
			<div class="image">
				<% if favorite.post.images.attached? %>
					<%= link_to post_path(favorite.post.id) do %>
						<%= image_tag favorite.post.images[0] %> <br>
					<% end %>
				<% else %>
					<%= link_to post_path(post.id) do %>
						<%= image_tag("no_image.jpg", size: "200x200") %>
					<% end %>
				<% end %><br>
				<%= favorite.post.title %>
				<%= link_to post_favorites_path(post_id: favorite.post.id), method: :delete, data: { confirm: '削除しますか？' } , class: "btn btn-default btn-xs" do %>
					<i class="delete-icon glyphicon glyphicon-trash" aria-hidden="true"></i>
				<% end %>
			</div>
		<% end %>
	</div>
</div>

<style>
	.image {
		float: left;
		width: 250px;
		height: 250px;
	}
	img {
		height: 200px;
		margin: 5px;
	}
</style>